{
	"manifest_version": 2,

	"name":         "__MSG_ext_name__",
	"version":      "2.1.23",
	"description":  "__MSG_ext_description__",
	"homepage_url": "http://vk.com/vokadio",
	"default_locale": "ru",

	"icons": {
		"16":  "icons/16x16.png",
		"48":  "icons/48x48.png",
		"128": "icons/128x128.png"
	},

	"background": {
		"scripts": [
			"/lib/md5.js",
			"/lib/json_parse_state.js",
			"/lib/vk.api.js",
			"/lib/lastfm.api.js",
			"/lib/jquery.js",
			"/lib/utils.js",

			"/com/rotate-animation.js",
			"/com/event-dispatcher.js",
			"/com/audio-player.js",
			"/com/player-helper.js",
			"/com/vk.js",
			"/com/options.js",

			"/com/events-listeners-collector.js",
			"/com/dynamic-list-view.js",

			"/app/config.js",
			"/app/background.js"
		]
	},

	"browser_action": {
		"default_title": "VoKadio",
		"default_icon":  "icons/popup.png",
		"default_popup": "popup.html"
	},

	"options_page": "options.html",

	"content_scripts": [
		{"matches": ["http://*/*", "https://*/*"], "js": ["app/hotkeys.js"], "run_at": "document_start"}
	],

	"permissions": [
		"notifications",
		"background",
		"https://api.vk.com/",
		"http://ws.audioscrobbler.com/"
	],

	"minimum_chrome_version": "18"
}
